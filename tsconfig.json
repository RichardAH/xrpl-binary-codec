{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
